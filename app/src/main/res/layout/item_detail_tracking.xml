                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:padding="10dp">

                    <View
                        android:id="@+id/vw_line"
                        android:layout_width="4dp"
                        android:layout_height="520dp"
                        android:background="@drawable/dashboard"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/img_dtl_trck_serialNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:background="@drawable/plant_list_monitoring1"
                        app:layout_constraintStart_toStartOf="@+id/vw_line"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_dtl_trck_serialNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:fontFamily="@font/montserrat_reguler"
                        android:text="Serial Number"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="@+id/img_dtl_trck_serialNumber"
                        app:layout_constraintStart_toEndOf="@+id/img_dtl_trck_serialNumber"
                        app:layout_constraintTop_toTopOf="@+id/img_dtl_trck_serialNumber" />

                    <TextView
                        android:id="@+id/tv_isi_dtl_trck_serialNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_reguler"
                        android:textColor="#313132"
                        android:text="PLN0219000022402214000000002"
                        android:textSize="12sp"
                        app:layout_constraintStart_toStartOf="@id/tv_dtl_trck_serialNumber"
                        app:layout_constraintTop_toBottomOf="@id/tv_dtl_trck_serialNumber" />

                    <!-- PEMBATAS -->

                    <ImageView
                        android:id="@+id/img_dtl_trck_keteranganHistory"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="24dp"
                        android:background="@drawable/plant_list_monitoring1"
                        app:layout_constraintStart_toStartOf="@+id/vw_line"
                        app:layout_constraintTop_toBottomOf="@id/img_dtl_trck_serialNumber" />

                    <TextView
                        android:id="@+id/tv_dtl_trck_keteranganHistory"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:fontFamily="@font/montserrat_reguler"
                        android:text="Kategori History"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="@+id/img_dtl_trck_keteranganHistory"
