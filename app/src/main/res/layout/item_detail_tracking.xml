                    <!--PEMBATAS-->

                    <ImageView
                        android:id="@+id/img_dtl_trck_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="24dp"
                        android:background="@drawable/plant_list_monitoring1"
                        app:layout_constraintStart_toStartOf="@+id/vw_line"
                        app:layout_constraintTop_toBottomOf="@id/img_dtl_trck_keteranganHistory" />

                    <TextView
                        android:id="@+id/tv_dtl_trck_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:fontFamily="@font/montserrat_reguler"
                        android:text="Status"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="@+id/img_dtl_trck_status"
                        app:layout_constraintStart_toEndOf="@+id/img_dtl_trck_status"
                        app:layout_constraintTop_toTopOf="@+id/img_dtl_trck_status" />

                    <TextView
                        android:id="@+id/tv_isi_dtl_trck_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_reguler"
                        android:text="100"
                        android:textColor="#313132"
                        android:textSize="12sp"
                        app:layout_constraintStart_toStartOf="@id/tv_dtl_trck_status"
                        app:layout_constraintTop_toBottomOf="@id/tv_dtl_trck_status" />

                    <View
